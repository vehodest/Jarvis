<Window x:Class="PriceMonitor.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:PriceMonitor"
		xmlns:dataTypes="clr-namespace:Entity.DataTypes;assembly=Entity"
		mc:Ignorable="d"
		Title="Util" Height="600" Width="800">
	<Grid>
		<Border Margin="10">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="2*"/>
				</Grid.ColumnDefinitions>

				<TreeView Grid.Column="0"
					ItemsSource="{Binding Path=MenuItems}"
					ScrollViewer.VerticalScrollBarVisibility="Visible">
					<TreeView.ItemTemplate>
						<HierarchicalDataTemplate DataType="{x:Type dataTypes:ObjectsChain}" ItemsSource="{Binding SubObjects}">
							<WrapPanel>
								<TextBlock Text="{Binding Object.Name}" />
							</WrapPanel>
						</HierarchicalDataTemplate>
					</TreeView.ItemTemplate>
				</TreeView>
			</Grid>
		</Border>
	</Grid>
</Window>
